<!-- reviews-section.liquid -->
<div class="reviews">
  {% for block in section.blocks %}
    <div class="review">
      <img
        width="200"
        height="200"
        src="{{ block.settings.customer_image | img_url: 'medium' }}"
        alt="{{ block.settings.customer_name }}"
      >
      <p>
        <strong>{{ block.settings.customer_name }}</strong>
      </p>
      <p>Rating: {{ block.settings.star_rating }} stars</p>
      <p>{{ block.settings.review_comment }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Reviews Section",
  "settings": [],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "customer_image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "customer_name",
          "label": "Customer Name"
        },
        {
          "type": "number",
          "id": "star_rating",
          "label": "Star Rating"
        },
        {
          "type": "textarea",
          "id": "review_comment",
          "label": "Review Comment"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
